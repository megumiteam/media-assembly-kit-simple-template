- var ver = 'v0.1.0'
doctype html
block vars
html(lang="ja", xmlns:og="http://ogp.me/ns#", xmlns:fb="http://www.facebook.com/2008/fbml", xmlns:mixi="http://mixi-platform.com/ns#")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		if type == 'home'
			meta(name="fragment", content="!")

		if type == 'home'
			title #{sitename} | #{title}
		else 
			title #{title} | #{sitename}
		link#google-fonts-css(rel="stylesheet", href="//fonts.googleapis.com/css?family=Raleway:700,900,400")
		link#font-awesome-css(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
		link#mak-css(rel="stylesheet", href="/mak-simple/css/style.css?ver=#{ver}")

		script(src="//code.jquery.com/jquery-1.11.2.min.js")
		script(src="//code.jquery.com/jquery-migrate-1.2.1.min.js")

		block wp_head

	body(class=type)

		#page.hfeed.site

			include ../includes/_header

			#content.site-content

				main#primary.site-main(role="main")
					block primary

				#secondary.widget-area(role="complementary")
					block secondary

			include ../includes/_footer

		block wp_footer

			script(src="/mak-simple/js/app.js?ver=#{ver}")
			script(src="/mak-simple/js/wpjson-root.js?ver=#{ver}")

