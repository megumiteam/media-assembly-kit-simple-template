extends extends/_layout

block vars
	- var sitename    = 'Media Blogger';
	- var title       = 'Media Assembly Kit demo site.';
	- var description = 'Media Assembly Kit demo site.';
	- var type        = 'home';

//- scripts
block append wp_head

block append wp_footer
	script(src="/mak-simple/js/wpjson-ranking.js?ver=#{ver}")
	script(src="/mak-simple/js/wpjson-postlist.js?ver=#{ver}")
	script.
		(function($) {
			// HOME
			var lpath    = location.hash.split("/");
			var lpathend = lpath[lpath.length-1];
			if ( lpathend === '' ) {
				lpath.pop();
			}
			var page    = lpath[lpath.length-2];
			var pagenum = "";
			if ( page == 'page' ) {
				pagenum     = lpathend;
			}
			wpjsonPosts();
		})(jQuery);

//- primary content
block primary

	//- Posts
	#post-box.post-list
		include includes/_loader
	//- more btn
	#more-entry

//- secondary content
block secondary

	//- Ranking
	aside#ranking-box.post-list.widget.widget-ranking
