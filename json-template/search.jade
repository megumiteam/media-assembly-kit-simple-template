extends extends/_layout

block vars
	- var sitename    = 'Media Blogger';
	- var title       = 'Search';
	- var description = '';
	- var type        = 'search';

//- scripts
block append wp_head

block append wp_footer
	script(src="/assets/js/wpjsonranking.min.js?ver=#{ver}")
	script(src="/assets/js/wpjsonpostlist.min.js?ver=#{ver}")
	script.
		(function($) {
			// search
			var result = {};
			var page   = '';
			if( 1 < window.location.search.length ) {
				var query = window.location.search.substring( 1 );
				var parameters = query.split( '&' );
				for( var i = 0; i < parameters.length; i++ ) {
					var element = parameters[ i ].split( '=' );
					var paramName = decodeURIComponent( element[ 0 ] );
					var paramValue = decodeURIComponent( element[ 1 ] );
					// パラメータ名をキーとして連想配列に追加する
					result[ paramName ] = escapeHTML(paramValue);
				}

				var lpath    = location.pathname.split("/");
				var lpathend = lpath[lpath.length-1];
				if ( lpathend === '' ) {
					lpath.pop();
				}
				var taxonomy = lpath[lpath.length-2];
				if ( lpath[lpath.length-2] == 'page' ) {
					page = lpath[lpath.length-1];
				}
			}
			var search = result['s'];

			wpjsonPosts( 's', search, page );
		})(jQuery);

//- primary content
block primary

	//- Posts
	header.page-header
		h1.page-title Search Result

	#post-box.post-list
		include includes/_loader
	//- more btn
	#more-entry

//- secondary content
block secondary

	//- Ranking
	aside#ranking-box.post-list.widget.widget-ranking
